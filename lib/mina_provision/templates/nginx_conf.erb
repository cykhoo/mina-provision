upstream <%= app_name %> {
    server unix:/home/deployer/<%= app_name %>/shared/sockets/unicorn.sock fail_timeout=0;
}

server {

    listen 80;
    listen 443 ssl;

    root /home/deployer/<%= app_name %>/current/public;

    server_name <%= domain %>;

    #enables all versions of TLS, but not SSLv2 or 3 which are weak and now deprecated.
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

    ssl_certificate     /etc/nginx/ssl/ssl-bundle.crt;
    ssl_certificate_key /etc/nginx/ssl/<%= cert_name %>.key;

    try_files $uri/index.html $uri @<%= app_name %>;

    access_log /var/log/nginx/<%= app_name %>_access.log combined;
    error_log  /var/log/nginx/<%= app_name %>_error.log;

    location @<%= app_name %> {
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $http_host;
        proxy_redirect   off;
        proxy_pass       http://<%= app_name %>;
        proxy_set_header X-Forwarded-Proto https;
    }

    error_page 500 502 503 504 /500.html;
    client_max_body_size       4G;
    keepalive_timeout          10;
}
